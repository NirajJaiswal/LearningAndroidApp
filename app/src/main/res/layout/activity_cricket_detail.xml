<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CricketDetailActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/cricketer_image"
        android:src="@drawable/shami"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/cricketer_name"
        android:text="@string/name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/cricketer_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cricket_name"
        android:layout_below="@id/cricketer_image"
        android:layout_toEndOf="@id/cricketer_name"
        tools:text="shami"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cricketer_age"
        android:text="@string/ageS"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/cricketer_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cricket_age"
        tools:text="34"
       android:layout_below="@id/cricket_name"
        android:layout_toEndOf="@id/cricketer_age"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"/>




</RelativeLayout>